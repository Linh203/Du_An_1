<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Welcome"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:src="@drawable/logo"
        />
    <TextView
        android:id="@+id/txt_wc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lý"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="40dp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/txt_nameWC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhà hàng Méc-Si Food"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/txt_khWC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thơm ngon đến từng giọt cuối cùng"
        android:textColor="#2196F3"
        android:gravity="center"
        android:textSize="17dp"
        android:layout_marginTop="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:gravity="center"
        >
        <Button
            android:id="@+id/btnlogin_wc"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Đăng nhập"
            android:backgroundTint="#AAD2F3"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginRight="10dp"
            />
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnregister_wc"
            android:text="Đăng ký"
            android:backgroundTint="#AAD2F3"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/txt_hdsdWC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hướng dẫn sử dụng"
        android:gravity="center"
        android:layout_marginTop="70dp"
        android:textColor="#FB0606"
        />
</LinearLayout>